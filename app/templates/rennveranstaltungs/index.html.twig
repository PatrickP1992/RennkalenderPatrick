{% extends 'base.html.twig' %}

{% block body %}
    <br>
    <div class="container">
        <h2>Rennveranstaltungen bearbeiten</h2>
        <br>

        <table class="table table-striped">
            <thead>
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Veranstaltungsort</td>
                <td>Datum</td>
            </tr>
            </thead>
            <tbody>
            {% for rennveranstaltung in rennveranstaltungen %}
                <tr>
                    <td>{{ rennveranstaltung.id }}</td>
                    <td>{{ rennveranstaltung.name }}</td>
                    <td>{{ rennveranstaltung.location }}</td>
                    <td>{{ rennveranstaltung.date }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
