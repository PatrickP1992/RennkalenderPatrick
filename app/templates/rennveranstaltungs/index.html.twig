{% extends 'base.html.twig' %}

{% block body %}

    {% for message in app.flashes('erfolg') %}
        <div class="alert alert-sucess">
            <h3>{{ message }}</h3>
        </div>
    {% endfor %}
    <br>
    <div class="container">
        <h2>Rennveranstaltungen bearbeiten</h2>
        <br>

        <div class="table-div">
            <table class="table table-dark table-striped">
                <thead>
                <tr>
                    <td>Id</td>
                    <td>Name</td>
                    <td>Veranstaltungsort</td>
                    <td>Datum</td>
                    <td>Bearbeiten</td>
                    <td>LÃ¶schen</td>
                    <td><a href="{{ path('rennveranstaltungen.anlegen') }}">Anlegen</a></td>
                </tr>
                </thead>
                <tbody>
                {% for rennveranstaltung in rennveranstaltungen %}
                    <tr>
                        <td>{{ rennveranstaltung.id }}</td>
                        <td>{{ rennveranstaltung.name }}</td>
                        <td>{{ rennveranstaltung.location }}</td>
                        <td>{{ rennveranstaltung.date  | date('d-m-Y h:m') }}</td>
                        <td><a href="{{ path('rennveranstaltungen.edit',{id: rennveranstaltung.id}) }}">bearbeiten</a></td>
                        <td><a href="{{ path('rennveranstaltungen.entfernen',{id: rennveranstaltung.id}) }}">entfernen</a></td>
                        <td></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    </div>
{% endblock %}
